{ 
  "routes": [ 
    {
      "route": "/api/tvshows",
      "methods": ["POST", "DELETE"],
      "allowedRoles": [ "friends" ]
    },
    {
      "route": "/puppies/*",
      "headers": {
          "cache-control": "must-revalidate, max-age=15770000"
      }
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/facebook",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 404
    },
    {
      "route": "/googleLogin",
      "rewrite": "/.auth/login/google"
    },
    {
      "route": "/aadLogin",
      "rewrite": "/.auth/login/aad"
    },
    {
      "route": "/logout",
      "rewrite": "/.auth/logout"
    },
    {
      "route": "/tvshow",
      "redirect": "/tvshows"
    }
  ],
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": [ "*.{jpg,png}" ]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/notfound.html"
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
  },
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "enabled": true,
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/72f988bf-86f1-41af-91ab-2d7cd011db47",
          "clientId": "cf978515-3bd2-4632-9a88-84610d244ada",
          "clientSecretSettingName": "AAD_SECRET"
        }
      }
    }
  }
} 
