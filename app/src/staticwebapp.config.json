{ 
  "routes": [ 
    {
      "route": "/api/tvshows",
      "methods": ["POST", "DELETE"],
      "allowedRoles": [ "friends" ]
    },
    {
      "route": "/puppies/*",
      "headers": {
          "cache-control": "must-revalidate, max-age=15770000"
      }
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/aad",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/facebook",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 404
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/google"
    },
    {
      "route": "/logout",
      "rewrite": "/.auth/logout"
    },
    {
      "route": "/tvshow",
      "redirect": "/tvshows"
    }
  ],
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": [ "*.{jpg,png}" ]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/notfound.html"
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
  }
} 
